<!DOCTYPE html>
<html>
<head>
  <title>TeamHadleyApp</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <link href='https://fonts.googleapis.com/css?family=Work+Sans:400,300' rel='stylesheet' type='text/css'>
</head>
<body>

	<nav>
    <div class="nav-wrapper">
      <div class="nav-container">
        <a href="#" class="brand-logo">Greg Hadley</a>
        <ul id="nav-mobile" class="right hide-on-med-and-down">
          <li><a href="#">Featured Homes</a></li>
          <li><a href="#">Search for Homes</a></li>
          <li><a href="/posts">Blog</a></li>
          <% if current_user %>
            <li><a href="/users/sign_out">Log Out</a></li>
          <% else %>
            <li><a href="/users/sign_in">Log In</a></li>
          <% end %>
        </ul>
      </div>
    </div>
  </nav>

	<%= yield %>

</body>
</html>
