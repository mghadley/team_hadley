<% if current_user.admin %>
	<div class="row">
		<div class="container">
			<h2>Create a New Post</h2>
			<%= form_for @post do |f| %>

				<div>
					<%= f.label :title %>
					<%= f.text_field :title, autofocus: true, id: "post_title" %>
				</div>

				<div>
					<%= f.text_area :body, "data-provider"=> "summernote" %>
				</div>

				<%= f.submit class: "btn primary-btn", id: "post_btn" %>
			<% end %>
		</div>
	</div>
<% else %>
	<h2 class="center">Only admins have access to this feature</h2>
<% end %>