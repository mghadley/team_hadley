<%= form_for @home do |f| %>
	<h3 class="text-center">Address</h3>
	<div class="form-group">
		<%= f.label :line_1 %>
		<%= f.text_field :line_1, class: "form-control" %>
	</div>
	<div class="form-group">
		<%= f.label :line_2 %>
		<%= f.text_field :line_2, class: "form-control" %>
	</div>
	<div class="form-group">
		<%= f.label :city %>
		<%= f.text_field :city, class: "form-control" %>
	</div>
	<div class="form-group">
		<%= f.label :state %>
		<%= f.text_field :state, class: "form-control" %>
	</div>
	<div class="form-group">
		<%= f.label :zip_code %>
		<%= f.text_field :zip_code, class: "form-control" %>
	</div>
	<h3 class="text-center">Info</h3>
	<div class="form-group">
		<%= f.label :price %>
		<%= f.number_field :price, class: "form-control" %>
	</div>
	<div class="form-group">
		<%= f.label :sqft %>
		<%= f.text_field :sqft, class: "form-control" %>
	</div>
	<div class="form-group">
		<%= f.label :bedrooms %>
		<%= f.number_field :bedrooms, class: "form-control" %>
	</div>
	<div class="form-group">
		<%= f.label :bathrooms %>
		<%= f.text_field :bathrooms, class: "form-control" %>
	</div>
	<div class="form-check">
		<label class="form-check-label">
			<%= f.check_box :pool, class: "form-check-input" %>
	    Pool?
	  </label>
	</div>
	<div class="form-group">
		<%= f.label :description %>
		<%= f.text_area :description, class: "form-control" %>
	</div>
	<h3 class="text-center">Cover Photo</h3>
	<div class="form-group">
		<%= f.file_field :cover_photo, class: "form-control-file", "aria-describedby" => "fileHelp" %>
		<span class='label label-info' id="upload-file-info"></span>
	</div>
	<h3 class="text-center">Other Photos</h3>
  <div class="form-group">
    <%= f.file_field :photos, class: "form-control-file", multiple: true %> 
    <span class="custom-file-control"></span>
  </div>
	<div class="center med-top-margin">
		<%= f.submit class: "btn btn-primary" %>
	</div>
<% end %>